#!/bin/bash

MAC_ADDR=11:22:33:44:55:66
EXTRA=

if [ `uname -r | grep '^3.4.' ` ] ; then
  BT_TTY=ttyS1
else
  EXTRA=-d
  BT_TTY=ttyS1
fi

timeout -k1s 10s \
brcm_patchram_plus	--patchram /lib/firmware/ap6210/bcm20710a1.hcd \
					--bd_addr ${MAC_ADDR} \
					--no2bytes --tosleep 2500 $EXTRA \
				/dev/${BT_TTY} 2> /tmp/trace
